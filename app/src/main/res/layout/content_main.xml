<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.john.puzzled.MainActivity"
    >


    <GridLayout

        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="com.example.john.puzzled.MainActivity"
       >
        <ImageButton
            android:id="@+id/button00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:text="00"
            app:srcCompat="@drawable/globe1" />

        <ImageButton
            android:id="@+id/button01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:text="01"
            app:srcCompat="@drawable/globe2" />

        <ImageButton
            android:id="@+id/button02"
            android:layout_columnSpan="1"
            android:layout_gravity="left|top"
            android:layout_rowSpan="1"
            android:text="02"
            app:srcCompat="@drawable/globe3" />

        <ImageButton
            android:id="@+id/button10"
            android:layout_gravity="left|top"
            android:text="10"
            app:srcCompat="@drawable/globe4" />

        <ImageButton
            android:id="@+id/button11"
            android:layout_gravity="left|top"
            android:text="11"
            app:srcCompat="@drawable/globe5" />

        <ImageButton
            android:id="@+id/button12"
            android:layout_gravity="left|top"
            android:text="12"
            app:srcCompat="@drawable/globe6" />

        <ImageButton
            android:id="@+id/button20"
            android:layout_gravity="left|top"
            android:text="20"
            app:srcCompat="@drawable/globe7" />

        <ImageButton
            android:id="@+id/button21"
            android:layout_gravity="left|top"
            android:text="21"
            app:srcCompat="@drawable/globe8" />

        <ImageButton
            android:id="@+id/button22"
            android:layout_gravity="left|top"
            android:text="22"
            app:srcCompat="@drawable/globe9" />


    </GridLayout>


</android.support.constraint.ConstraintLayout>
